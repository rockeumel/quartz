<?xml version="1.0" encoding="UTF-8"?>
<!--
	Control Id's:
	301 - Submenu Movies
	302 - Submenu Tv Shows
	303 - Submenu Music
	304 - Submenu Pictues
	305 - Submenu Extras
	307 - Submenu Settings
	
	311 - HomePanel Movies
	325 - Coverflow Fake OnNext Movies
	326 - Coverflow Fake OnPrevious Movies
	312 - HomePanel Tv Shows
	321 - Coverflow Fake OnNext Tv Shows
	322 - Coverflow Fake OnPrevious Tv Shows
	313 - HomePanel Music
	323 - Coverflow Fake OnNext Music
	324 - Coverflow Fake OnPrevious Music
	314 - HomePanel Pictures
	327 - Coverflow Fake OnNext Pictures
	328 - Coverflow Fake OnPrevious Pictures
-->
<window id="0">
	<defaultcontrol>301</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<include>Animation_DefaultWindowOpenClose</include>

	<controls>
		<include>Home_Background</include>
		<control type="label" description="debug label">
			<label></label>
			<posx>0</posx>
			<posy>0</posy>
			<width>1500</width>
			<height>87</height>
			<font>Font_HomeNav</font>
			<shadowcolor>ff000000</shadowcolor>
			<scroll>false</scroll>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>HomeNavSelected</textcolor>
		</control>

		<!-- Home Navigation & Coverflow for Recently Added -->
		<include>HomePanel_Movies</include>
		<include>HomePanel_TvShows</include>
		<include>HomePanel_Music</include>

		<include condition="!Skin.HasSetting(HomePanel_Off) + !Skin.HasSetting(HomePanel_CoverFlowOff)">HomePanel_CoverFlow_Pictures</include>
		<include condition="!Skin.HasSetting(HomePanel_Off)">HomePanel_Pictures</include>

		<include condition="!Skin.HasSetting(HomePanel_Off)">HomePanel_Extras</include>
		<include condition="!Skin.HasSetting(HomePanel_Off)">HomePanel_Systeminfo</include>

		<include>HomeNav_Menu</include>

		<!-- Time, Date, RSS and Debug Grid -->
		<include>Global_TimeDate</include>
		<include>Global_RSS</include>
		<include>DebugMode</include>
	</controls>
</window>
