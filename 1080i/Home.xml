<?xml version="1.0" encoding="UTF-8"?>
<!--
	Control Id's:
	301 - Submenu Movies
	302 - Submenu Tv Shows
	303 - Submenu Music
	304 - Submenu Pictues
	305 - Submenu Extras
	307 - Submenu Settings
	
	311 - Shelf Movies
	312 - Shelf Tv Shows
	313 - Shelf Music
	314 - Shelf Pictures
	
	317 - Shelf VisibleChange Indicator Movies
	318 - Shelf VisibleChange Indicator Pictures
	319 - Shelf VisibleChange Indicator Music
	320 - Shelf VisibleChange Indicator TvShows
	
	321 - Shelf OnNext Tv Shows
	322 - Shelf OnPrevious Tv Shows
	323 - Shelf OnNext Music
	324 - Shelf OnPrevious Music
	325 - Shelf OnNext Movies
	326 - Shelf OnPrevious Movies
	327 - Shelf OnNext Pictures
	328 - Shelf OnPrevious Pictures
-->
<window id="0">
	<defaultcontrol>8998</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<include>Home_Background</include>
		<control type="button" id="8998" description="Fix ATV1 focus bug">
			<include>HiddenButton</include>
			<onfocus>Control.SetFocus(301)</onfocus>
			<onclick>Control.SetFocus(301)</onclick>
		</control>
		<control type="label" description="debug label">
			<label>$INFO[Container(310).NumItems] - $INFO[Skin.String(NumberOfMenuitems)]</label>
			<posx>0</posx>
			<posy>0</posy>
			<width>1500</width>
			<height>87</height>
			<font>Font_HomeNav</font>
			<shadowcolor>ff000000</shadowcolor>
			<scroll>false</scroll>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>HomeNavSelected</textcolor>
			<!--<visible>false</visible>-->
		</control>

		<!-- Home Navigation & Shelf -->
		<include condition="!Skin.HasSetting(MoviesSectionHide)">HomeShelf_Movies</include>
		<include condition="!Skin.HasSetting(TVSectionHide)">HomeShelf_TvShows</include>
		<include condition="!Skin.HasSetting(MusicSectionHide)">HomeShelf_Music</include>
		<include condition="!Skin.HasSetting(PicturesSectionHide)">HomeShelf_Pictures</include>
		<include condition="!Skin.HasSetting(AddonsSectionHide)">HomeShelf_Addons</include>
		<include>HomeShelf_XBMC</include>

		<include>Home_Menu</include>

		<!-- Time, Date, RSS and Debug Grid -->
		<!--<include>Global_TimeDate</include>
		<include>Global_RSS</include>-->

	</controls>
</window>
