<?xml version="1.0" encoding="UTF-8"?>
<!--
	Control Id's:
	301 - Submenu Movies
	302 - Submenu Tv Shows
	303 - Submenu Music
	304 - Submenu Pictues
	305 - Submenu Extras
	307 - Submenu Settings
	
	311 - Shelf Movies
	312 - Shelf Tv Shows
	313 - Shelf Music
	314 - Shelf Pictures
	
	319 - Shelf VisibleChange Indicator Music
	320 - Shelf VisibleChange Indicator TvShows
	
	321 - Shelf OnNext Tv Shows
	322 - Shelf OnPrevious Tv Shows
	323 - Shelf OnNext Music
	324 - Shelf OnPrevious Music
	325 - Shelf OnNext Movies
	326 - Shelf OnPrevious Movies
	327 - Shelf OnNext Pictures
	328 - Shelf OnPrevious Pictures
-->
<window id="0">
	<defaultcontrol>301</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>
		<include>Home_Background</include>
		<control type="label" description="debug label">
			<label>$INFO[Container(310).NumItems]</label>
			<posx>0</posx>
			<posy>0</posy>
			<width>1500</width>
			<height>87</height>
			<font>Font_HomeNav</font>
			<shadowcolor>ff000000</shadowcolor>
			<scroll>false</scroll>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>HomeNavSelected</textcolor>
			<visible>false</visible>
		</control>

		<!-- Home Navigation & Shelf -->
		<include>HomeShelf_Movies</include>
		<include>HomeShelf_TvShows</include>
		<include>HomeShelf_Music</include>
		<include>HomeShelf_Pictures</include>

		<include>HomeShelf_Extras</include>
		<include>HomeShelf_Systeminfo</include>

		<include>Home_Menu</include>

		<!-- Time, Date, RSS and Debug Grid -->
		<include>Global_TimeDate</include>
		<include>Global_RSS</include>
		
	</controls>
</window>
